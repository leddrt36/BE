extends ../layout.pug

block content
  div.new
    form.posts_form(action= "/posts", method= "post")
      p 반려견 이름
        input(type="text", name="petName")
      p 반려견 성별
        input(type="text", name="petSex")
      p 견종
        input(type="text", name="petType")
      p 잃어버린 장소
        input(type="text", name="lostPlace")
      p 잃어버린 날짜
        input(type="text", name="lostDate", placeholder= "yyyy-mm-dd")
      p 사례금
        input(type="text", name="money")
      p 본문
        textarea(name="body", cols="40", rows="10")

      p
        input(type="submit")
        